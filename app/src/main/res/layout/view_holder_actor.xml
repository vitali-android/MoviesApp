<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/background"

    android:padding="@dimen/space_1x">


    <ImageView
        android:id="@+id/photo_actor"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintCircleRadius="@dimen/space_1x"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_actor1" />

    <TextView
        android:id="@+id/name_actor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_1x"
        android:gravity="center_vertical"
        android:lineSpacingExtra="2sp"
        android:text="@string/actor_1"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/photo_actor"
        app:layout_constraintStart_toStartOf="@+id/photo_actor"
        app:layout_constraintTop_toBottomOf="@+id/photo_actor" />

</androidx.constraintlayout.widget.ConstraintLayout>